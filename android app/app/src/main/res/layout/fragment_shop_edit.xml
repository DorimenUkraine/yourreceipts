<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_store_mall_directory_black_48px"
        android:id="@+id/imageView2"
        android:padding="@dimen/padding"/>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout_shop_name"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/layout_shop_address"
            android:layout_below="@+id/layout_shop_name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
        <android.support.design.widget.TextInputEditText
            android:textSize="@dimen/text_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_shop_address"
            android:id="@+id/shop_address"
             />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputEditText
            android:textSize="@dimen/text_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_shop_name"
            android:id="@+id/shop_name"/>
    </android.support.design.widget.TextInputLayout>


    <Button
        android:layout_marginTop="4dp"
        android:textSize="@dimen/text_size"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date"
        android:background="@android:color/transparent"
        android:layout_below="@+id/layout_shop_name"
        android:layout_alignLeft="@+id/layout_shop_name"
        android:layout_alignStart="@+id/layout_shop_name"
        android:layout_alignBottom="@+id/imageView5" />

    <Button
        android:layout_marginTop="4dp"
        android:textSize="@dimen/text_size"
        android:textColor="@android:color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time"
        android:background="@android:color/transparent"
        android:layout_below="@+id/layout_shop_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/date" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_today_black_48px"
        android:id="@+id/imageView5"
        android:padding="@dimen/padding"
        android:layout_below="@+id/layout_shop_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



</RelativeLayout>